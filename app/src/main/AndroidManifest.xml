<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufba.mata62.sistemaacademico">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.CadastrarAlunoActivity"
            android:label="@string/title_activity_cadastrar_aluno"
            android:parentActivityName=".controller.ListarAlunosActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.ListarAlunosActivity"
            android:label="@string/title_activity_listar_alunos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.MainActivity"
            android:theme="@style/Theme.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.EscalonamentoActivity"
            android:label="@string/title_activity_escalonamento"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.CurriculoActivity"
            android:label="@string/title_activity_curriculo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.AlunoActivity"
            android:label="@string/title_activity_aluno"
            android:parentActivityName=".controller.ListarAlunosActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>